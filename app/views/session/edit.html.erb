<section class="yb-session-main">
	<div class="yb-session-info-about">
		<div class="yb-session-info">
			<div class="yb-session-image">
				<div class="yb-session-image-edit" id="upload_image">
					<span><i class="icon ion-camera"></i></span>
				</div>
				<% if session_user.image? %>
					<%= image_tag session_user.image.url, id: 'profile_image' %>
				<% else %>
					<img id="profile_image" src="/assets/default.jpg" />
				<% end %>
			</div>
			<div class="yb-session-about">
				<h2><%= session_user.name %></h2>
				<h3 class="yb-username"><%= session_user.username %></h3>
			</div>
			<div class="yb-session-about-edit">
				<%= form_for(:user, url: '/session/update/image', multipart: true, html: {method: 'patch'}) do |f| %>
					<%= f.file_field :image, required: true %>
					<button type="submit" id="submit_image">Update Picture</button>
				<% end %>
				<a href="/session/logout" id="yb-session-logout">Log Out</a>
				<a href="#" id="yb-session-delete">Delete Account</a>
			</div>
		</div>
	</div>
	<div class="yb-session-container">
		<div class="yb-session-edit">
			<div class="yb-session-edit-div">
				<h2>Info</h2>
				<%= form_for(:user, url: '/session/update/info', html: {method: 'patch'}) do |f| %>
					<label>Full Name :</label>
					<%= f.text_field :name, value: session_user.name, required: true %>
					<label>Username :</label>
					<%= f.text_field :username, value: session_user.username, required: true %>
					<label>Password :</label>
					<%= f.password_field :password, placeholder: 'Enter Password', required: true %>
					<button type="submit">Submit</button>
				<% end %>
			</div>
			<div class="yb-session-edit-div">
				<h2>Credintials</h2>
				<%= form_for(:user, url: '/session/update/credintials', html: {method: 'patch'}) do |f| %>
					<label>Current Password :</label>
					<%= f.password_field :old_password, placeholder: 'Enter Password', required: true %>
					<label>New Password :</label>
					<%= f.password_field :password, placeholder: 'Enter New Password', required: true %>
					<label>Confirm New Passsword :</label>
					<%= f.password_field :confirm_password, placeholder: 'Confirm New Password', required: true %>
					<button type="submit">Submit</button>
				<% end %>
			</div>
			<div class="yb-session-edit-div">
				<h2>Address</h2>
				<%= form_for(:user, url: '/session/update/address', html: {method: 'patch'}) do |f| %>
					<label>Country :</label>
					<%= f.country_select :country, value: session_user.country %>
					<label>Town :</label>
					<%= f.text_field :town, value: session_user.town, required: true %>
					<label>Password :</label>
					<%= f.password_field :password, placeholder: 'Enter Password', required: true, id:'address_password' %>
					<button type="submit">Submit</button>
				<% end %>
			</div>
			<div class="yb-session-edit-div">
				<h2>Location</h2>
			</div>
			<div class="yb-session-edit-div">
				<h2>Contacts</h2>
				<%= form_for(:user, url:'/session/update/contact', html: {method: 'patch'}) do |f| %>
					<label>Email Address :</label>
					<%= f.email_field :email, value: session_user.email, required: true %>
					<label>Phone Number :</label>
					<%= f.telephone_field :number, value: session_user.number, required: true %>
					<label>Password :</label>
					<%= f.password_field :password, placeholder: 'Enter Password', required: true, id:'contact_password' %>
					<button type="submit">Submit</button>
				<% end %>
			</div>
		</div>
	</div>
</section>

<section class="yb-admin-container">
	<div class="yb-activation-key">
		<h1 style="font-size: 32px;"><%= session_admin_user.user.name %></h1>
		<p style="margin-top: -8px; font-size: 20px;">@<%= session_admin_user.user.username %></p>
		<hr>
		<% if @activation.is_active? and @activation.yb_key.is_active? %>
			<p style="font-size: 18px; color: #666666 !important;"><span style="color: #666666 !important;"><strong style="color: #666666 !important;">Key Type : </strong> <%= @activation.yb_key.yb_package.package.capitalize! %></span> <span style="margin-left: 35px; color: #666666 !important;"><strong style="color: #666666 !important;">Last Activated Date : </strong> <%= @activation.yb_key.activated_date.localtime.strftime("%a %d %b, %Y at %H:%M") %></span></p>
			<p style="font-size: 18px;"><strong>Product Key</strong></p>
			<div class="yb-key"><p><%= @activation.yb_key.get_key %></p></div>
			<% if @activation.yb_key.yb_package.package.downcase! == "trial" %>
				<p style="font-size: 18px;">Your trial key will be expired in <strong><%= @activation.yb_key.remaining %> Days</strong></p>
				<hr>
				<p><span><strong>Total Items Added : </strong> <%= @items %> Items</span><span style="margin-left: 35px"><strong>Minimum Package : </strong><%= @package.capitalize! %> Package</span></p>
			<% else %>
				<p>Your  key will be expired in <strong><%= @activation.yb_key.remaining %> Days</strong></p>
				<button style="background: red;">Desactivate Key</button>
			<% end %>
		<% else %>
			<p>Your account is not active. Please, Insert a key and activate your account.</p>
			<button href="#yb-add-key-form" id="admin-add-admin-user">ACTIVATE KEY</button>
			<section class="zoom-anim-dialog mfp-hide" id="yb-add-key-form"><%= render "admin_user/keyinput" %></section>
		<% end %>
	</div>

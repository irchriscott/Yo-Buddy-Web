					<div class="yb-menu-content" style="background:#20a8da; height: 320px;">
						<div class="yb-menu-dt-content">
							<a>
								<h1>SILVER</h1>
								<p>1 User</p>
								<p>15 Items</p>
								<div class="yb-menu-dt-price">30K UGX / Month</div>
							</a>
						</div>
					</div>
				</div>
				<div class="yb-admin-item-menu">
					<div class="yb-menu-content" style="background:#0fe232; height: 320px;">
						<div class="yb-menu-dt-content">
							<a>
								<h1>GOLD</h1>
